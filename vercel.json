{
  "version": 2,
  "builds": [
    {
      "src": "streamlit_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "25mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/streamlit_app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "PORT": "8501"
  },
  "functions": {
    "streamlit_app.py": {
      "maxDuration": 60
    }
  }
}