# Bentley Budget Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_USER=airflow
MYSQL_DATABASE=airflow
MYSQL_HOST=localhost
MYSQL_PORT=3306

# ==============================================
# AIRFLOW CONFIGURATION
# ==============================================
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=mysql+pymysql://airflow:${MYSQL_PASSWORD}@mysql:3306/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here

# ==============================================
# API KEYS - DATA PROVIDERS
# ==============================================
# Tiingo API (Stock market data)
TIINGO_API_KEY=your_tiingo_api_key_here

# Yahoo Finance API
YAHOO_FINANCE_API_KEY=your_yahoo_api_key_here

# Barchart API
BARCHART_API_KEY=your_barchart_api_key_here

# Polygon.io API
POLYGON_API_KEY=your_polygon_api_key_here

# News API
NEWS_API_KEY=your_news_api_key_here

# ==============================================
# BANKING & FINANCIAL APIs
# ==============================================
BANKING_API_KEY=your_banking_api_key_here
BANKING_CLIENT_ID=your_banking_client_id_here
BANKING_CLIENT_SECRET=your_banking_client_secret_here

# ==============================================
# AIRBYTE CONFIGURATION
# ==============================================
# For Airbyte Cloud (recommended):
# 1. Get connection ID from: https://cloud.airbyte.com/workspaces/<workspace>/connections
# 2. Generate API key at: https://cloud.airbyte.com/workspaces/<workspace>/settings/api-keys
AIRBYTE_API_URL=https://api.airbyte.com/v1
AIRBYTE_CONNECTION_ID=your_connection_id_from_cloud_dashboard
AIRBYTE_API_KEY=your_api_key_from_cloud_settings

# For Local Airbyte (if using Docker Airbyte locally):
# AIRBYTE_API_URL=http://airbyte-server:8001
# AIRBYTE_CONNECTION_ID=your_local_connection_id

# ==============================================
# MLFLOW CONFIGURATION
# ==============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=mysql+pymysql://mlflow:${MYSQL_PASSWORD}@mysql:3306/mlflow
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts

# ==============================================
# KNIME CONFIGURATION
# ==============================================
KNIME_SERVER_URL=http://localhost:8080
KNIME_SERVER_USERNAME=admin
KNIME_SERVER_PASSWORD=your_knime_password_here

# ==============================================
# PLAID CONFIGURATION
# ==============================================
# Get credentials from: https://dashboard.plaid.com/account/keys
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox
# Options: sandbox, development, production
PLAID_BASE_URL=https://sandbox.plaid.com
PLAID_ACCESS_TOKEN=your_plaid_access_token_here
PLAID_START_DATE=2025-11-01
PLAID_END_DATE=2025-11-23

# ==============================================
# DOCKER & DEPLOYMENT
# ==============================================
COMPOSE_PROJECT_NAME=bentley-budget-bot
DOCKER_BUILDKIT=1

# ==============================================
# VERCEL DEPLOYMENT (Optional)
# ==============================================
VERCEL_TOKEN=your_vercel_token_here

# ==============================================
# STREAMLIT CONFIGURATION
# ==============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
